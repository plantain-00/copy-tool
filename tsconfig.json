{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",

        "outDir": ".",
        "declaration": false,

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "static/",
        "node_modules/"
    ]
}