{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",

        "declaration": false,

        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,

        "skipLibCheck": true,
        "importHelpers": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "newLine": "LF"
    },
    "exclude": [
        "static/",
        "node_modules/",
        "screenshots",
        "prerender"
    ],
    "paths": {
        "date-fns/format": [
            "node_modules/date-fns/typings"
        ]
    }
}